.sisley
  background #ffffff
  position relative
  .section
    position relative
    z-index 1
  .section-1
    margin-bottom 90px
    text-align center
    padding-top 120px
    position relative
    img
      display block
      margin 0 auto
    img:first-child
      width 78.6%
    img:last-child
      position absolute
      right 10%
      top 52%
      width 21.28%
  .section-2
    background #482fa6
    position absolute
    img
      display block
      margin 0 auto
      width 53.2421875%
  .section-3
    margin-bottom -13.4%
    position relative
    text-align center
    z-index 2
    transform translateY(-19%)
    .first
      position relative
      z-index 1
      img:nth-child(3)
        width 12.734375%
      img
        bottom 1%
        position relative
        vertical-align middle
        width 10.1953125%
        &.right
          margin-right 1.171875%
    .text
      position relative
      z-index 0
      img
        margin 0 auto
        width 21.3671875%
    img.bg
      left 50%
      position absolute
      top 0
      width 53.2421875%
      transform translateX(-50%)
  .section-4
    overflow hidden
    transform skewY(4deg)
    .mask
      bottom 38px
      display block
      position relative
      width 100% !important
      transform skewY(-4deg)
    div
      display inline-block
      vertical-align top
    .first
      background-image url(/images/projects/sisley/imanebahouss-sisley-10.png)
      background-repeat no-repeat
      background-size 100% 100%
      padding 5.3% 0
      width 42%
      img
        display block
        margin 0 auto
        width 87%
    .last
      width 58%
      img
        width 100%
  .section-5
    background-image url(/images/projects/sisley/imanebahouss-sisley-13.png)
    background-position 48% 50%
    background-repeat no-repeat
    background-size 57.109375%
    padding 75px 0 120px 0
    img
      vertical-align middle
      width 10.5859375%
      &:first-child
        margin-left 20.078125%
      &:nth-child(2)
        width 12.1484375%
      &:nth-child(4)
        margin-left 0.9765625%
    .text
      color #2704d3
      display inline-block
      font-family 'Futura PT Web'
      margin-left 1.953125%
      vertical-align middle
      width 12.8125%
      h2
        font-size 2.15rem
      p
        font-size 1rem
  .section-6
    background #f2f2f2
    position relative
    img
      width 11.9140625%
      &:first-child
        left 61.1328125%
        position absolute
        transform translateY(-59%)
      &:nth-child(2)
        vertical-align middle
        width 41.6796875%
      &:nth-child(3), &:nth-child(4), &:nth-child(5)
        margin-left 5.3515625%
        vertical-align middle
  .section-7
    background #cfcfcf
    padding 120px 0
    div
      text-align center
    img
      width 16.317016317016%
    .first
      margin-bottom 35px
      img
        width 26.184926184926%
    .second
      margin-bottom 55px
      img
        width 46.620046620047%
        &:first-child
          margin-right 1.554001554002%
    .third img
      margin-right 4.506604506605%
      &:last-child
        margin-right 0
