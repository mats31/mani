.home
  left 0
  top 0
  position absolute
  z-index 2
  .home-content
    width 100vw
  .home-left
    background rgba(255,255,255,0)
    height 100vh
    position relative
    width 24.93055556vw
    z-index 1
    transform-origin 0 0 0
  .home-viewProjects
    border-right 1px solid white
    cursor pointer
    height 100%
    position relative
    width 8.263888888889vw
    z-index 1
    transform-origin 100% 0 0
    &::before
      background rgba(255,255,255,1)
      border-right: 1px solid #505050;
      content ''
      display block
      height 100%
      position absolute
      width 100%
      z-index 2
    h2
      margin 0
      font-size 1.5rem
      position absolute
      right 1.5rem
      top 40%
      width 151px
      z-index 2
      transform rotate(-90deg) translateX(9px)
      transform-origin 100%
      transition right 0.25s ease-in-out
    &:hover
      h2
        right 2rem
      .home-projects
        transform translate3d(0,0,0)
    .home-projects
      background rgba(255,255,255,1)
      height 100%
      overflow hidden
      opacity 0
      position absolute
      right -33.263888888889vw
      width 33.263888888889vw
      z-index 1
      transform translate3d(-100%,0,0)
      ul
        margin 0
        padding 0
        li
          cursor pointer
          position relative
          overflow hidden
          width 100%
          &::before
            background rgba(0,0,0,0.5)
            content ''
            height 100%
            left 0
            position absolute
            top 0
            width 100%
            z-index 1
            transition background 0.2s ease-in-out
          h2
            color white
            display block
            font-size 1.25rem
            left 50%
            margin 0
            position absolute
            text-align center
            top 50%
            z-index 1
            transform translate3D(-50%, -50%, 0)
            span
              display block
              font-size 0.75rem
          img
            vertical-align top
            width 100%
            transform scale(1)
            transition transform 0.2s ease-in-out
          &:hover
            &::before
              background rgba(0,0,0,0)
            a
              z-index 2
            h2
              display none
            img
              transform scale(1.1)
  .home-title
    background #ffffff
    // border-left: 1px solid #505050;
    height 100%
    left 8.263888888889vw
    position absolute
    top 0
    width 16.666666666667vw
    transform-origin 0 0 0
    .home__about-text
      color #4a4a4a
      cursor pointer
      font-family montserratsemibold
      font-size 1.5rem
      margin 0
      position absolute
      // opacity 0
      // width 0
      left 4.132231404959%
      top 4%
      z-index 2
      &.is-active::before
        transform translateY(2rem)
      &::before
        background #000
        display block
        content ''
        height 1px
        bottom 30px
        position absolute
        width 100%
        z-index 1
        transform translateY(0)
        transition transform 0.2s ease-in-out
    .home__title-text
      bottom calc(4% - 10px)
      color #4a4a4a
      font-family montserratextrabold
      font-size: 1.5rem;
      left 4.132231404959%
      position absolute
      span:last-child
        font-family montserratlight
        font-size 1.2rem
        &::before
          background #505050
          display block
          content ''
          height 1px
          margin 5px 0
          width 70%;
    .home-about
      background rgba(255,255,255,1)
      height 100%
      position absolute
      width 33.263888888889vw
      transform translate3d(-100%, 0, 0)
      img
        left 44.166666666667%
        position absolute
        top 5.555555555556%
        width 10.416666666667%
      p
        left: 7.5%;
        position: absolute;
        top: 50%;
        -webkit-transform: translate3d(0,-50%,0);
        transform: translate3d(0,-50%,0);
        color: #4a4a4a;
        font-family: montserratextrabold;
        font-size: 2rem;
        margin: 0 0 6.666666666667%;
        padding: 0 7% 0 0;
        text-transform: uppercase;
  .home__project-box
    left 50%
    position absolute
    top 50%
    width 50%
    z-index 0
    transform translate3d(-50%, -50%, 0)
    a
      border 1px solid #fc2d59
      color white
      display block
      font-family montserratultralight
      font-size 2rem
      margin 0 auto
      max-width 18.6%
      padding 12px 10px
      text-align center
      text-decoration none
      width 100%
      transition background 0.25s ease-out, color 0.25s ease-out
      &:hover
        background rgba(255, 255, 255, 0.5)
        color #fc2d59
    h2
      text-align center
      span
        color white
        display inline-block
      span:first-child
        font-family montserratextrabold
        font-size 5.4rem
        transform translate3d(0%, 0%, 0)
      span:last-child
        font-family montserratultralight
        font-size 4rem
        transform translate3d(0%, 0%, 0)
  .home__first-line
    background #ffffff
    left 41.597222222222%
    top 0
    height 100vh
    width 1px
    position absolute
    transform-origin 0 0 0
  .home__second-line
    background #ffffff
    left 58.263888888889%
    top 0
    height 100vh
    width 1px
    position absolute
    transform-origin 0 0 0
  .home__right
    background #ffffff
    height 100vh
    left: 75%;
    position absolute
    top 0
    width 24.93055556vw
    z-index 1
    transform-origin 66.7296786389% 0 0
    &:after
      border-left: 1px solid #505050;
      content ''
      display block
      position absolute
      background white
      height 100vh
      // right -8.4vw
      right -1px
      top 0
      width 8.263888888889vw
      z-index 10
    .home__right-container
      // border-right: 1px solid #505050;
      height 100%
      width: 16.597222222222vw
      transform-origin 0 0 0
      .home__contact-text
        color #4a4a4a
        cursor pointer
        font-family montserratsemibold
        font-size 1.5rem
        margin 0
        position absolute
        // opacity 0
        // width 0
        right 37%
        top 4%
        z-index 2
        &.is-active::before
          transform translateY(2rem)
        &::before
          background #000
          display block
          content ''
          height 1px
          bottom 30px
          position absolute
          width 100%
          z-index 1
          transform translateY(0)
          transition transform 0.2s ease-in-out
      .home__journal
        bottom calc(4% - 10px)
        color #4a4a4a
        font-family montserratextrabold
        font-size: 1.5rem;
        right 37%
        position absolute
        &::before
          background #000
          display block
          content ''
          height 1px
          bottom 30px
          position absolute
          width 100%
          z-index 1
          transform translateY(0)
          transition transform 0.2s ease-in-out
      .home__contact
        background rgba(255,255,255,1)
        height 100%
        position absolute
        top: 0
        right: 0
        width 33.263888888889vw
        // transform translate3d(0%, 0, 0)
        // z-index 10
        ul
          left 13.25%
          margin 0
          padding 0
          position absolute
          top 50%
          transform translate3d(0, -50%, 0)
          li
            list-style none
            margin-bottom 60px
            // opacity 0
            a
              color #8d8d8d
              display inline-block
              font-family montserratextrabold
              font-size 4.4rem
              outline none
              position relative
              text-decoration none
              transition all 0.25s ease
            &:last-child
              margin-bottom 0
