.project-container__header
  background white
  height 8.2%
  left 0
  position fixed
  top 0
  width 100%
  z-index 3
  transform translateY(-100%)
  img
    height 70%
    margin 3.4% 0 0 8%
    transform translateY(-50%)
  h1
    display inline-block
    font-size 1rem
    margin 2.7% 0 0 2%
    vertical-align top
.project-container__scroll
  color white
  display inline-block
  left 50%
  position relative
  text-align center
  z-index 1
  transform translate(-50%, -125%)
  span
    display block
    path
      transition fill 0.25s ease-out
    &:first-child
      border-radius 50%
      // padding 15px 0px
    &.active path
        fill black
    &:last-child
      margin-top 10px
.project-container
  position relative
  &.active
    z-index 1
  .project-container__back
    color #000000
    cursor pointer
    font-size 1.5rem
    left 93.5%
    padding-left 5px
    position fixed
    opacity 0.1
    text-decoration none
    top 2.7%
    z-index 4
    transition opacity 0.25s ease-in-out
    &.active
      opacity 1
    &:hover
      opacity 1
      &::before,
      &::after
        transform translateY(-50%) rotate(0deg)
    &::before
      background #000000
      content ''
      display block
      height 2px
      left -10px
      position absolute
      top 53.5%
      width 12px
      transform translateY(-50%) rotate(-45deg)
      transition transform 0.25s ease-in-out
    &::after
      background #000000
      content ''
      display block
      height 2px
      left -10px
      position absolute
      top 55%
      width 12px
      transform translateY(-50%) rotate(45deg)
      transition transform 0.25s ease-in-out
  .project-content
    padding-top 30px
    // overflow hidden
  .mid-section
    margin 0 auto
    max-width 50%
    width 100%
  .grid
    height 100%
    left 0%
    position absolute
    top 0vh
    width 100%
    div
      background #dddddd
      height 100%
      position absolute
      width 1px
      &:nth-child(1)
        left 8.333333333333%
      &:nth-child(2)
        left 25%
      &:nth-child(3)
        left 41.666666666667%
      &:nth-child(4)
        left 58.333333333333%
      &:nth-child(5)
        left 75%
      &:nth-child(6)
        left 91.666666666667%
  .description-container
    position relative
    width 100%
    z-index 1
    div
      display inline-block
      vertical-align top
    .title-container
      margin-left 8.333333333333%
      width 50%
      p
        color #4a4a4a
        font-family montserratultralight
        font-size 1.3rem
        line-height 3rem
        padding 0 34.283126% 0 1.383125864454%
      h1
        color #4a4a4a
        display inline-block
        margin 0
        padding 0 1.383125864454% 0 1.383125864454%
        &:after
          content ''
          background #fc2d59
          display block
          height 2px
          width 100%
        span:first-child
          font-family montserratextrabold
          font-size 2.5rem
          line-height 3rem
        span
          color #4a4a4a
          display block
          font-family montserratsemibold
          font-size 1.5rem
          line-height 3rem
    .what-i-did, .who
      width 16.666666666667%
      h2
        color #4a4a4a
        font-family montserratsemibold
        font-size 1.5rem
        line-height 3rem
        margin-top 30px
        padding 0 4.166666666667% 0 4.166666666667%
      ul
        margin 0
        padding 0 4.166666666667% 0 4.166666666667%
        li
          color #4a4a4a
          font-family montserratultralight
          font-size 1.3rem
          line-height 3.1rem
          list-style none
.project-footer
  background #ffffff
  overflow hidden
  padding 30px 0 0 0
  position relative
  .project-footer__list-container
    position relative
  .project-footer__menu
    margin 0 auto 30px auto
    max-width 83.333333333333%
    padding 0
    width 100%
    li
      display inline-block
      padding-left 1%
      width 19%
      span
        cursor pointer
        display inline-block
        &::before
          background #4a4a4a
          content ''
          display block
          position relative
          bottom 8px
          height 1px
          transition bottom 0.25s ease-out
          width 100%
        &:hover::before
          bottom 0
      &:first-child
        width 39%
        span::before
          bottom 8px !important
  .project-footer__projects
    margin 0 auto
    max-width 83.333333333333%
    overflow hidden
    padding 0
    width 100%
    li
      cursor pointer
      display inline-block
      position relative
      vertical-align top
      width 50%
      transform scale(1)
      transition all 0.25s ease-out
      a::before
        background rgba(0, 0, 0, 0.5)
        content ''
        display block
        height 100%
        left 0
        position absolute
        top 0
        visibility visible
        width 100%
        z-index 3
        transform scale(1)
        transition all 0.25s ease-out
      p
        color white
        left 50%
        position absolute
        text-align center
        top 50%
        z-index 4
        transform translate3D(-50%, -50%, 0)
        span
          color white
          font-size 1.25rem
          &:last-child
            font-size 0.75rem
      &:hover
        transform scale(1.05)
        z-index 1
        a::before
          background rgba(0, 0, 0, 0)
          visibility hidden
          transform scale(1.05)
      img
        display block
        width 100%
  h2
    color #4a4a4a
    font-family montserratsemibold
    font-size 1.5rem
    position absolute
    top 50%
    transform rotate(-90deg) translateY(-50%)
